<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonationScheduleActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="184dp"
        android:layout_height="55dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="114dp"
        android:fontFamily="cursive"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="50dp"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="395dp"
        android:layout_height="264dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/border"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.165">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="3dip"
                android:text="Local"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="3dip"
                android:text="Data"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="120dp"
                android:background="@drawable/border"
                android:padding="3dip"
                android:text="Horário"
                android:textSize="20dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:padding="3dip"
                android:text="HEMOSC Itajaí"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:padding="3dip"
                android:text="10/01/24"
                android:textSize="18dp" />

            <TextView
                android:layout_width="115dp"
                android:layout_height="44dp"
                android:padding="3dip"
                android:text="08h às 10h"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="115dp"
                android:layout_height="44dp"
                android:padding="3dip"
                android:text="HEMOSC Floripa"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:padding="3dip"
                android:text="25/01/24"
                android:textSize="18dp" />

            <TextView
                android:layout_width="115dp"
                android:padding="3dip"
                android:text="13h às 15h"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:padding="3dip"
                android:text="HEMOSC Blumenau"
                android:textSize="18dp" />

            <TextView
                android:layout_width="103dp"
                android:layout_height="44dp"
                android:padding="3dip"
                android:text="17/02/24"
                android:textSize="18dp" />

            <TextView
                android:layout_width="115dp"
                android:layout_height="44dp"
                android:padding="3dip"
                android:text="10h às 12h"
                android:textSize="18dp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="630dp"
        android:text="Voltar"
        android:backgroundTint="#D33737"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>